<!DOCTYPE html>
<html>
  <head>
    <title>BookersDx</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/aaa3787956.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <h4 class="bookers">Bookers</h4>
    </div>

    <ul class="nav navbar-nav navbar-right">


    <% if user_signed_in? %>
      <li class="">
        <%= link_to 'Home', user_path(current_user.id),class:"fas fa-apple-alt" %>
      </li>
      <li class="">
        <%= link_to 'Users', users_path,class:"fas fa-grin-stars" %>
      </li>
      <li class="">
        <%= link_to 'Books', books_path,class:"far fa-folder" %>
      </li>
      <li class="">
        <%= link_to "Logout", destroy_user_session_path,class:"fab fa-angellist", method: :delete %>
      </li>
    <% else %>
    <li class="">
        <%= link_to "Home", root_path,class:"fas fa-apple-alt" %>
      </li>
      <li class="">
        <%= link_to "About", home_about_path,class:"fas fa-atlas" %>
      </li>
      <li class="">
        <%= link_to "Signup", new_user_registration_path,class:"fas fa-baseball-ball" %>
      </li>
      <li class="">
        <%= link_to "Login", new_user_session_path,class:"fas fa-bell" %>
      </li>

    <% end %>
  </ul>
  </nav>


    <%= yield %>
  </body>
</html>
