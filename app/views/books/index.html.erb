

<h1>Books</h1>

<div class="box">
	<table>
	<tr>
	<th></th>
  	<th><strong>title</strong></th>
  	<th><strong>body</strong></th>
  	<th></th>
  	</tr>

<tbody>
<tr>
	<% @books.each do |book| %>

	<td></td>
  	<td><%= book.title %></td>
  	<td><%= book.body %></td>
  	<td></td>
</tr>
</tbody>
	<% end %>
</table>
</div>
  

<h1>New Book</h1>

<%= form_for(@book, url:books_path) do |f| %>

<% if @book.errors.any? %>
    <%= @book.errors.count %>errors
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>


